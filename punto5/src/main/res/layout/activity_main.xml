<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/data"
            android:textSize="20dp"
            android:textColor="@color/whitesmoke"
            android:textStyle="bold"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
               style="@style/Text.View1"
                android:text="@string/nombre"/>

            <EditText
                style="@style/Text.EditText"
                android:hint="@string/hint_nombre"
                android:inputType="textPersonName"
                android:id="@+id/eNombre"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.View1"
                android:text="@string/correo"/>

            <EditText
                style="@style/Text.EditText"
                android:hint="@string/hint_correo"
                android:inputType="textEmailAddress"
                android:id="@+id/eCorreo"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.View1"
                android:text="@string/telefono"/>

            <EditText
                style="@style/Text.EditText"
                android:hint="@string/hint_telefono"
                android:inputType="phone"
                android:id="@+id/eTel"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.View1"
                android:text="@string/gender"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <RadioButton
                    style="@style/Text.Check"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/female"
                    android:checked="true"
                    android:id="@+id/cFemale"/>

                <RadioButton
                    style="@style/Text.Check"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/male"
                    android:id="@+id/cMale"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                style="@style/Text.View1"
                android:text="@string/city"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/whitesmoke"
                android:gravity="center"
                android:id="@+id/spinner">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.View1"
                android:text="@string/hobbies"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        style="@style/Text.Check"
                        android:layout_width="match_parent"
                        android:text="@string/hobby1"
                        android:id="@+id/cHobby1"/>

                    <CheckBox
                        style="@style/Text.Check"
                        android:layout_width="match_parent"
                        android:text="@string/hobby2"
                        android:id="@+id/cHobby2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        style="@style/Text.Check"
                        android:layout_width="match_parent"
                        android:text="@string/hobby3"
                        android:id="@+id/cHobby3"/>

                    <CheckBox
                        style="@style/Text.Check"
                        android:layout_width="match_parent"
                        android:text="@string/hobby4"
                        android:id="@+id/cHobby4"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                style="@style/Text.View1"
                android:text="@string/birthday"/>

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/whitesmoke"
                android:layout_gravity="center"
                android:id="@+id/dBirthday"
                android:scrollbarSize="100dp">

            </DatePicker>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button"
            android:textStyle="bold"
            android:background="@color/darkcyan"
            android:layout_gravity="center"
            android:textColor="@color/whitesmoke"
            android:id="@+id/button"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/nombre"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tNombre"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/correo"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tCorreo"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/telefono"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tTel"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/gender"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tGender"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/city"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tCity"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/hobbies"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tHobbies"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:text="@string/birthday"
            android:textColor="@color/darkcyan"/>

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:textColor="@color/whitesmoke"
            android:id="@+id/tBirthday"/>

    </LinearLayout>

</ScrollView>