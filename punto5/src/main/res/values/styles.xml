<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Text.View1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/darkcyan</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.View2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/whitesmoke</item>
    </style>

    <style name="Text.Check">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/lightblue</item>
    </style>

</resources>
