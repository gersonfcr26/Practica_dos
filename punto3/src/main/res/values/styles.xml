<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LightThemeSelector" parent="android:Theme.Holo.Light">

    </style>
    
    <style name="textView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/goldenrod</item>
    </style>

    <style name="editText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/whitesmoke</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textStyle">italic</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>
